function getHexColor(colorName) {
    const colors = {
        rosa: "#FF1493", 
        verde: "#32CD32", 
        azul: "#0000FF", 
        negro: "#000000" 
    };

    return colors[colorName.toLowerCase()] || ""; 
}
function updateInputColor() {
    var selectedColor = document.getElementById("selectEstilo").value;
    document.getElementById("inputEstilo").value = selectedColor; 
}
function validateColorInput() {
    const validColors = ["rosa", "verde", "azul", "negro"];
    const inputColor = document.getElementById("inputEstilo").value.toLowerCase().trim();

    if (!validColors.includes(inputColor) && inputColor !== "") {
        document.getElementById("inputEstilo").setCustomValidity("Por favor, ingrese un color válido: rosa, verde, azul o negro.");
    } else {
        document.getElementById("inputEstilo").setCustomValidity(""); 
    }
}
function VerificarVacio(sector_) {
    const id_ = document.getElementById("id_hidden").value;
    console.log(id_); // Verifica el valor de id_
    console.log(sector_);
    let datos=null;

    $.ajax({
        url: '/Home/VerificarVacio',
        data: { sector: sector_, id: id_ },
        type: 'GET',
        success: function(response) {
            if (response.mensaje) {
                $('.mensaje').text(response.mensaje); // Muestra el mensaje de error o éxito
            }

            $('.modal-body').css({
                'display': 'flex',
                'flex-direction': 'column',
                'justify-content': 'space-between'
            });

            // Si hay datos de información personal, llenar los campos correspondientes
            if (sector_ === 1 && response.datos) {
                $('#inputNombre').val(response.datos.nombre_apellido || '');
                $('#inputMail').val(response.datos.mail || '');
                $('#inputTel').val(response.datos.telefono || '');
                $('#inputAcerca').val(response.datos.acerca_de_mi || '');
                $('#inputProfesion').val(response.datos.profesion_actual || '');
                $('#inputEstilo').val(response.datos.estilo || '');
                $('#inputUbicacion').val(response.datos.ubicacion || '');
            }

            // Si el sector es 2 (Educación), llenar los campos de educación
            if (sector_ === 2 && response.datos) {
                const datosEducacion = response.datos;
                datos = response.datos;
                $('#inputTitulo').val(datosEducacion.titulo || '');
                $('#inputNombre').val(datosEducacion.institucion || '');
                $('#inputDisci').val(datosEducacion.disciplina || '');
                $('#inputActGrupo').val(datosEducacion.actividad_grupo || '');
                $('#inputDescripEdu').val(datosEducacion.descripcion || '');
                $('#inputAno1').val(datosEducacion.ano_inicio || '');
                $('#inputMes1').val(datosEducacion.mes_inicio || '');
                $('#inputAno2').val(datosEducacion.ano_fin || '');
                $('#inputMes2').val(datosEducacion.mes_fin || '');
            }
            //si el sector 3 está
            if (sector_ === 3 && response.datos) {
                const datosCertificacion = response.datos;
                console.log(datosCertificacion);
                $('#inputTituloCert').val(datosCertificacion.titulo || '');
                $('#inputEmpresaCerti').val(datosCertificacion.empresa || '');
                $('#inputCredencial').val(datosCertificacion.credencial || '');
                $('#inputMesExp').val(new Date(datosCertificacion.expedicion).getMonth() + 1 || '');
                $('#inputAnoExp').val(new Date(datosCertificacion.expedicion).getFullYear() || '');
                $('#inputMesCaduc').val(new Date(datosCertificacion.caducidad).getMonth() + 1 || '');
